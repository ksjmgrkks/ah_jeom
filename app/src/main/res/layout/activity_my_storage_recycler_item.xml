<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="362dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/gray_border_box_background_round">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_my_storage_recycler_card_view"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="206dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_my_storage_recycler_image"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:scaleType="centerCrop"
            android:src="@drawable/artist_art_recycler_item_4_temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/activity_my_storage_recycler_title_text"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_my_storage_recycler_card_view"
        tools:text="첫번째로 좋아하는 것" />

    <TextView
        android:id="@+id/activity_my_storage_recycler_caption_text"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_my_storage_recycler_title_text"
        tools:text="인물 사진 좋은 걸로 위주로 모은 폴더.\nPrejus Nakulma. 작가님 진짜 대박" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/activity_my_storage_delete_button"
        android:layout_width="36dp"
         android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_button_background"
        android:padding="10dp"
        android:src="@drawable/ic_delete"
        android:tint="@color/white"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>