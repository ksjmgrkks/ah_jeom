<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="30dp"
    android:layout_margin="6dp"
    android:background="@drawable/update_item_white_background">

    <TextView
        android:id="@+id/fragment_home_keyword_add_grid_recycler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/roboto_bold"
        android:text="심플한"
        android:textColor="@color/main_black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fragment_home_keyword_add_grid_remove_button"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="4dp"
        android:padding="3dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_delete"
        android:tint="@color/box_border"
        app:layout_constraintBottom_toBottomOf="@id/fragment_home_keyword_add_grid_recycler_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_home_keyword_add_grid_recycler_text" />

</androidx.constraintlayout.widget.ConstraintLayout>