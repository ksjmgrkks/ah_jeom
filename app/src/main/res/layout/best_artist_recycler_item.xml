<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="304dp"
    android:layout_height="432dp"
    android:background="@drawable/black_border"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/best_artist_recycler_profile_image"
        android:layout_width="304dp"
        android:layout_height="100dp"
        android:background="@drawable/black_border"
        android:scaleType="centerCrop"
        android:src="@drawable/best_artist_1_temp" />

    <LinearLayout
        android:id="@+id/best_artist_recycler_linear_layout"
        android:layout_width="304dp"
        android:layout_height="42dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/best_artist_recycler_name"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/main_black"
            android:text="Levan Kenia"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/best_artist_recycler_representative_image"
        android:layout_width="304dp"
        android:layout_height="290dp"
        android:background="@drawable/black_border"
        android:scaleType="centerCrop"
        android:src="@drawable/best_artist_representative_1_temp" />


</LinearLayout>