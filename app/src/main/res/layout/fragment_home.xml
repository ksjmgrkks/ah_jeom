<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragment_home_top_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/main_black"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/fragment_home_search_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_search_outlined"
                    android:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/fragment_home_profile_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="28dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_profile_outlined"
                    android:tint="@color/white" />


            </LinearLayout>

            <!-- 광고배너 -->

            <com.ssac.ah_jeom.util.NestedScrollableHost
                android:id="@+id/fragment_home_banner_nested_scrollable_host"
                android:layout_width="match_parent"
                android:layout_height="456dp"
                android:background="@drawable/black_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_top_bar">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/fragment_home_banner_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_border" />

            </com.ssac.ah_jeom.util.NestedScrollableHost>

            <!-- 관심 분야 -->

            <TextView
                android:id="@+id/fragment_home_interests_text"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/roboto_bold"
                android:text="관심 분야"
                android:textColor="@color/main_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/fragment_home_interests_tab_layout"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_banner_nested_scrollable_host" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/fragment_home_interests_tab_layout"
                android:layout_width="0dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_interests_text"
                app:tabBackground="@drawable/tab_selector_inset"
                app:tabGravity="fill"
                app:tabIndicator="@color/transparent"
                app:tabIndicatorColor="@color/transparent"
                app:tabMinWidth="90dp"
                app:tabMode="scrollable"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/fragmentHomeTabTextStyle"
                app:tabTextColor="@color/main_black" />

            <com.ssac.ah_jeom.util.NestedScrollableHost
                android:id="@+id/fragment_home_interests_nested_scrollable_host"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/black_border"
                app:layout_constraintEnd_toEndOf="@id/fragment_home_interests_tab_layout"
                app:layout_constraintStart_toStartOf="@id/fragment_home_interests_tab_layout"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_interests_tab_layout">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/fragment_home_interests_viewpager"
                    android:layout_width="match_parent"
                    android:background="@drawable/black_border"
                    android:layout_height="match_parent" />


            </com.ssac.ah_jeom.util.NestedScrollableHost>

            <!-- 관심 키워드 -->

            <TextView
                android:id="@+id/fragment_home_keyword_text"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/roboto_bold"
                android:text="관심 키워드"
                android:textColor="@color/main_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/fragment_home_interests_nested_scrollable_host"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_interests_nested_scrollable_host" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/fragment_home_keyword_tab_layout"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@color/transparent"
                app:layout_constraintEnd_toEndOf="@id/fragment_home_interests_nested_scrollable_host"
                app:layout_constraintStart_toStartOf="@id/fragment_home_keyword_text"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_keyword_text"
                app:tabBackground="@drawable/tab_selector_inset"
                app:tabGravity="fill"
                app:tabIndicator="@color/transparent"
                app:tabIndicatorColor="@color/transparent"
                app:tabMinWidth="90dp"
                app:tabMode="scrollable"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/fragmentHomeTabTextStyle"
                app:tabTextColor="@color/main_black" />

            <com.ssac.ah_jeom.util.NestedScrollableHost
                android:id="@+id/fragment_home_keyword_nested_scrollable_host"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/black_border"
                app:layout_constraintEnd_toEndOf="@id/fragment_home_keyword_tab_layout"
                app:layout_constraintStart_toStartOf="@id/fragment_home_keyword_tab_layout"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_keyword_tab_layout">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/fragment_home_keyword_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.ssac.ah_jeom.util.NestedScrollableHost>


            <!-- 최고의 아티스트 -->

            <TextView
                android:id="@+id/fragment_home_best_artist_text"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/roboto_bold"
                android:text="최고의 아티스트"
                android:layout_marginStart="28dp"
                android:textColor="@color/main_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_keyword_nested_scrollable_host" />

            <com.ssac.ah_jeom.util.NestedScrollableHost
                android:id="@+id/fragment_home_best_artist_nested_scrollable_host"
                android:layout_width="0dp"
                android:layout_height="346dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/black_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/fragment_home_best_artist_text"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_best_artist_text">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_home_best_artist_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_border" />


            </com.ssac.ah_jeom.util.NestedScrollableHost>

            <!-- 새로운 아티스트 -->

            <TextView
                android:id="@+id/fragment_home_new_artist_text"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/roboto_bold"
                android:text="새로운 아티스트"
                android:textColor="@color/main_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/fragment_home_new_artist_nested_scrollable_host"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_best_artist_nested_scrollable_host" />

            <com.ssac.ah_jeom.util.NestedScrollableHost
                android:id="@+id/fragment_home_new_artist_nested_scrollable_host"
                android:layout_width="0dp"
                android:layout_height="346dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/black_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_new_artist_text">


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/fragment_home_new_artist_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_border" />


            </com.ssac.ah_jeom.util.NestedScrollableHost>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

