<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    tools:context=".src.login.LoginActivity">


    <TextView
        android:id="@+id/activity_login_main_text"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="569dp"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="14sp"
        android:text="간단한 한끼의 예술 식사"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_login_main_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/roboto_bold"
        android:text="시작하기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationZ="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <LinearLayout
        android:id="@+id/activity_login_google_layout"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="79dp"
        android:background="@drawable/social_login_background"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_login_main_text"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_login_google_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/login_google_logo" />

        <TextView
            android:id="@+id/activity_login_google_text"
            android:layout_width="122dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="구글로 로그인"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_login_kakao_layout"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/social_login_background"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_login_google_layout"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_login_kakao_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@drawable/login_kakao_logo" />

        <TextView
            android:id="@+id/activity_login_kakao_text"
            android:layout_width="122dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="카카오로 로그인"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_login_naver_layout"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/social_login_background"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_login_kakao_layout"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_login_naver_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/login_naver_logo" />

        <TextView
            android:id="@+id/activity_login_naver_text"
            android:layout_width="122dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="네이버로 로그인"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_login_facebook_layout"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/social_login_background"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_login_naver_layout"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_login_facebook_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/login_facebook_logo" />

        <TextView
            android:id="@+id/activity_login_facebook_text"
            android:layout_width="185dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="페이스북으로 로그인"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_login_sign_up_layout"
        android:layout_width="304dp"
        android:layout_height="19dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_login_facebook_layout"
        tools:visibility="visible">

        <TextView
            android:layout_width="173dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:alpha="0.6"
            android:fontFamily="@font/roboto_regular"
            android:text="아직 회원님이 아니신가요?"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="61dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/roboto_bold"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>


