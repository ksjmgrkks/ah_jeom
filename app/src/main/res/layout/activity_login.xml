<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    tools:context=".src.login.LoginActivity">


    <TextView
        android:id="@+id/activity_login_main_text"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="569dp"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="14sp"
        android:text="간단한 한끼의 예술 식사"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_login_main_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/roboto_bold"
        android:text="시작하기"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_login_background_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="centerCrop" />


</androidx.constraintlayout.widget.ConstraintLayout>