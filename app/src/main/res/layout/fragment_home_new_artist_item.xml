<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_new_artist_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_home_new_artist_name_layout"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_home_new_artist_profile_name_text"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="김새롬"
            android:textColor="@color/main_black"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_home_new_artist_profile_image"
        android:layout_width="304dp"
        android:layout_height="143dp"
        android:background="@drawable/black_border"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/new_artist_profile_image_1_temp" />

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/black_border_thick"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/black_border_thick"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_subscibe" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/black_border_thick"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_profile" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="115dp"
        android:background="@drawable/black_border"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment_home_new_artist_first_art_image"
            android:layout_width="152dp"
            android:layout_height="115dp"
            android:background="@drawable/black_border"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new_artist_art_1_temp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment_home_new_artist_second_art_image"
            android:layout_width="152dp"
            android:layout_height="115dp"
            android:background="@drawable/black_border"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new_artist_art_2_temp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="120dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_home_new_artist_profile_state_text"
            android:layout_width="264dp"
            android:layout_height="44dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="나는 자연을 좋아합니다, 무척 새롭죠.\n그래서 찍는건 즐거워요."
            android:textColor="@color/main_black"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>




